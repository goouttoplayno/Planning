<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecedef" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/jianjieHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/topstyle" >

            <TextView
                android:id="@+id/jianjielotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:ems="8"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="详细介绍"
                android:textColor="#ffffff"
                android:textSize="18dip" />

            <Button
                android:id="@+id/jianjieback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/headbutton"
                android:text="返回"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jianjieHeader" >

            <RelativeLayout
                android:id="@+id/jianjierela"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/normal_move"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/jianjieimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp" />

                <ImageView
                    android:id="@+id/jianjieline"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jianjieimg"
                    android:background="@drawable/hengline" />

                <TextView
                    android:id="@+id/zwqtv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jianjieline"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/jianjiebtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jianjierela"
                android:background="@drawable/jianjiebtn"
                android:gravity="center_horizontal"
                android:text="查看相关禁忌" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>